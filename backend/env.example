# Configuración del servidor
PORT=10000
NODE_ENV=production

# Configuración de la base de datos MySQL (Render)
DB_HOST=${DB_HOST}
DB_USER=${DB_USER}
DB_PASSWORD=${DB_PASSWORD}
DB_NAME=${DB_NAME}
DB_PORT=${DB_PORT}

# Configuración JWT
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=24h

# Configuración de sesiones
SESSION_SECRET=${SESSION_SECRET}

# Configuración WhatsApp (opcional)
WHATSAPP_ENABLED=true
WHATSAPP_API_KEY=tu_whatsapp_api_key_aqui
WHATSAPP_PHONE_NUMBER=5493482588383
WHATSAPP_API_URL=https://api.whatsapp.com/send

# Configuración de Recordatorios
REMINDER_TIME=09:00
REMINDER_TIMEZONE=America/Argentina/Buenos_Aires

# Configuración de horarios de trabajo
WORK_START_HOUR=8
WORK_END_HOUR=18
WORK_DAYS=1,2,3,4,5,6

# Configuración de duración de turnos (en minutos)
TURN_DURATION=120

# Configuración de seguridad
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configuración de logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuración de CORS (para producción)
ALLOWED_ORIGINS=https://daytona.com.ar,https://www.daytona.com.ar 