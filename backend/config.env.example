# Configuración del servidor
PORT=3000
NODE_ENV=development

# Configuración de la base de datos MySQL
DB_HOST=localhost
DB_USER=root
DB_PASSWORD=tu_password_aqui
DB_NAME=daytona_turnos
DB_PORT=3306

# Configuración JWT
JWT_SECRET=cambia_este_secret_por_uno_super_seguro_y_unico
JWT_EXPIRES_IN=24h

# Configuración WhatsApp (opcional)
WHATSAPP_ENABLED=true
WHATSAPP_API_KEY=tu_whatsapp_api_key_aqui
WHATSAPP_PHONE_NUMBER=5493482588383
WHATSAPP_API_URL=https://api.whatsapp.com/send

# Configuración de Recordatorios
REMINDER_TIME=09:00
REMINDER_TIMEZONE=America/Argentina/Buenos_Aires

# Configuración de horarios de trabajo
WORK_START_HOUR=8
WORK_END_HOUR=18
WORK_DAYS=1,2,3,4,5,6
